<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_entry" tools:context=".EntryActivity">

    <TextView
        android:id="@+id/entry_textView"
        android:text="@string/entry_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/see_categories_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="See your categories"
        android:layout_below="@+id/entry_textView"
        android:layout_marginTop="10dp"/>

    <Button
        android:id="@+id/add_categories_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create a new category"
        android:layout_below="@+id/see_categories_button"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/testView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/add_categories_button"/>
</RelativeLayout>
